extends ../layout.pug

block append styles
    link(href="/css/share.css", rel="stylesheet")

block content
    header#main-header
        h1#brand E-Liquid Manager

        if user
            a(href="#")#mobile-menu-toggle
                span menu
            ul#menu
                li
                    a(href="/") Mixing
                li
                    a(href="/logout") Logout

    main#share-app
        h1= liquid.name
        if (liquid.author || {}).username
            small By #{liquid.author.username}
        div.flavours
            table
                tr
                    th Flavour
                    th %
                each flavourRow in liquid.flavours
                    tr.flavour
                        td.name= flavourRow.flavour.name
                        td.perc= flavourRow.perc

        if user && user._id.toString() !== liquid.author._id.toString()
            div.save-to-user
                button#save-liquid.primary Save to my liquids
        script.
            console.log(!{ JSON.stringify(liquid)})

block append scripts
    script(src="/js/dist/share.js")
